# Django Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# Database (Neon PostgreSQL)
# Get this from: https://neon.tech
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Redis (Upstash or Redis Cloud)
# Get this from: https://upstash.com or https://redis.com
REDIS_URL=redis://default:password@host:port

# JWT Secret
JWT_SECRET=your-jwt-secret-key-here

# OAuth2 - Google
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth2 - Discord
# Get from: https://discord.com/developers/applications
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# OAuth2 - Microsoft
# Get from: https://portal.azure.com/#view/Microsoft_AAD_RegisteredApps
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# MeSomb Payment (Cameroon Mobile Money)
# Get from: https://mesomb.hachther.com
MESOMB_APP_KEY=your-mesomb-app-key
MESOMB_ACCESS_KEY=your-mesomb-access-key
MESOMB_SECRET_KEY=your-mesomb-secret-key

# Cloudinary (Image Storage)
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_SECRET=your-api-secret

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
